{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build form",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "main.c",
                "-o",
                "pos",
                //"-lnotcurses"
                "-lncurses",
                "-lform"
                // Si ncurses est√° en una ruta personalizada, por ejemplo:
                // "-I/usr/local/opt/ncurses/include",
                // "-L/usr/local/opt/ncurses/lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
